{
  "name": "grofit",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20.18.0 <21",
    "pnpm": ">=8.15.6"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/plugins/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo run dev --concurrency=20",
    "lint": "turbo run lint && eslint \"packages/**/*.{ts,tsx,js,jsx}\" \"apps/api/**/*.{ts,tsx,js,jsx}\" \"apps/worker/**/*.{ts,tsx,js,jsx}\" \"apps/web/**/*.{ts,tsx,js,jsx}\" --max-warnings=0",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx,js,jsx}\" \"apps/api/**/*.{ts,tsx,js,jsx}\" \"apps/worker/**/*.{ts,tsx,js,jsx}\" \"apps/web/**/*.{ts,tsx,js,jsx}\" --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "turbo run test",
    "typecheck": "turbo run typecheck",
    "commitlint": "commitlint",
    "prepare": "husky",
    "plugins:codegen": "node scripts/generate-plugin-registry.mjs"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@types/node": "^20.12.12",
    "@types/pg": "^8.15.5",
    "@typescript-eslint/eslint-plugin": "^8.41.0",
    "@typescript-eslint/parser": "^8.41.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.5",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "vitest": "^3.2.4",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "**/*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "**/*.{md,json,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  }
}
