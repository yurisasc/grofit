{
  "name": "@grofit/log-watcher-plugin",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@8.15.6",
  "engines": {
    "node": ">=20.18.0 <21",
    "pnpm": ">=8.15.6"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "keywords": [
    "grofit-plugin"
  ],
  "grofitPlugin": {
    "id": "log-watcher",
    "compatibleApi": ">=0.1.0 <1.0.0",
    "permissions": [
      "event.emit:feed.item"
    ],
    "entry": "./src/plugin.ts",
    "configSchema": {
      "$schema": "https://json-schema.org/draft/2020-12/schema",
      "type": "object",
      "properties": {
        "whisperLogPath": {
          "type": "string"
        }
      },
      "additionalProperties": false
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "tsc -w -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json"
  },
  "devDependencies": {
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@grofit/plugin-api": "workspace:*"
  }
}
